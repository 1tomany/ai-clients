# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{*.css,*.html,*.js,*.json,*.jsonl}]
indent_size = 2

[{*.json,*.jsonc,*.jsonl}]
insert_final_newline = false

[composer.json]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
